<a
  href="/collection"
  class="mt-1 ml-1 z-20 absolute top-0 left-0 focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900"
>EXIT</a>
<section class="splide w-full m-0" aria-label="Splide Basic HTML Example">
  <div class="splide__track">
    <ul class="splide__list">
      {{#each wordSet.words}}
        <li class="splide__slide w-full">
          <section
            class="mx-auto bg-white rounded-md shadow-md dark:bg-gray-800 text-white w-full m-0 h-full w-full"
          >

            <div
              class="flex flex-col justify-center content-center justify-items-center items-center w-full h-1/2"
            >
              <div
                class="w-1/2 flex flex-col justify-center content-center justify-items-center items-center h-1/2 bg-gray-300 rounded-3xl dark:bg-gray-800"
              >
                {{#if this.word}}
                  <h4 class="dark:text-white text-black">{{capitalize
                      this.word
                    }}</h4>
                  <audio controls src="{{this.audio}}"></audio>
                {{else}}
                  <h4
                    class="wordToQuery dark:text-white text-black text-2xl mb-2"
                  >{{capitalize this}}</h4>
                  <audio id="audio-{{this}}" controls src=""></audio>
                {{/if}}
              </div>
            </div>
            {{#if this.word}}{{else}}
            {{/if}}

          </section>
        </li>
      {{/each}}
    </ul>
    <div
      class="dark:bg-gray-800 flex flex-col justify-center content-center justify-items-center items-center absolute w-1/2 bottom-0 inset-x-0 h-3 m-auto mb-16 text-white h-3/6 bg-gray-300 rounded-3xl"
    >
      <div class="wrapper audioPlayer relative">
        <header>
          <h1 class="dark:text-white text-black">Web dictaphone</h1>
        </header>
        <section class="main-controls">
          <canvas class="visualizer" height="60px"></canvas>
          <div id="buttons" class="flex flex-row justify-center mt-5">
            <button
              id="recordBtn"
              class="record focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800"
            >Record</button>
            <button
              id="stopBtn"
              style="opacity: 0;"
              class="stop focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900"
            >Stop</button>
          </div>
        </section>
        <section class="sound-clips">
        </section>
      </div>
    </div>
  </div>
</section>

<script src="/js/audioRecorder.js"></script>
<script src="/js/splide/splide.min.js"></script>
<script src="/js/queryWordInfo.js"></script>
<script>
  var splide = new Splide('.splide'); splide.mount(); console.log(splide);
  splide.Components.Slides.style("w-full h-full"); if
  (localStorage.getItem('color-theme') === 'light'){
  document.querySelector(".splide__arrow--prev svg").style.fill = "#000";
  document.querySelector(".splide__arrow--next svg").style.fill = "#000"; } let
  lastSlideSel = document.querySelector(".splide__slide:last-of-type div div");
  lastSlideSel.innerHTML += `<a href="/collection/{{wordSet._id}}/train/complete"
  id="finishBtnSlide" class="mt-5 focus:outline-none text-white bg-green-700
  hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg
  text-sm px-5 py-2.5 dark:bg-green-600 dark:hover:bg-green-700
  dark:focus:ring-green-800">Finish</a>`;
</script>