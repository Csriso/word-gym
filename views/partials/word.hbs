<section
  class="max-w-7xl p-6 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800 mt-6 text-white"
>

  <div
    class="flex flex-col justify-center content-center justify-items-center items-center"
  >
    {{#if this.word}}
      <h4>{{this.word}}</h4>
      <audio controls src="{{this.audio}}"></audio>
    {{else}}
      <h4 class="wordToQuery">{{this}}</h4>
      <audio id="audio-{{this}}" controls src=""></audio>
    {{/if}}

  </div>
  {{#if this.word}}{{else}}
  {{/if}}
  <div class="wrapper audioPlayer">

    <header>
      <h1>Web dictaphone</h1>
    </header>

    <section class="main-controls">
      <canvas class="visualizer" height="60px"></canvas>
      <div id="buttons">
        <button class="record">Record</button>
        <button class="stop">Stop</button>
      </div>
    </section>

    <section class="sound-clips">

    </section>

  </div>

  <script src="/js/audioRecorder.js"></script>

</section>